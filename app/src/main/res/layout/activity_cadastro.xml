<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cast_expanded_controller_progress_text_color"
    android:gravity="center_vertical|center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eletrofisio.com.teste11.activity.CadastroActivity">


        <EditText
            android:id="@+id/text_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView5"
            android:layout_marginTop="19dp"
            android:background="@drawable/fundo_caixa_texto"
            android:hint="Digite seu usuário"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:textColorHighlight="#013105"
            android:textColorHint="#013105"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_usuario"
            android:layout_marginTop="27dp"
            android:background="@drawable/fundo_caixa_texto"
            android:hint="Digite seu email"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:textColorHint="#013105"
            tools:ignore="HardcodedText,TextFields" />

        <EditText
            android:id="@+id/text_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_email"
            android:layout_marginTop="26dp"
            android:background="@drawable/fundo_caixa_texto"
            android:ems="10"
            android:hint="Digite sua senha"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:textColorHint="#013105"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button_cadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_senha"
            android:layout_marginTop="21dp"
            android:background="@drawable/fundo_botao"
            android:text="@string/botao_cadastro"
            android:textColorHint="#013105"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_faca_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="Já tem conta? Faça login aqui!"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#013105"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/web_hi_res_512" />


</RelativeLayout>