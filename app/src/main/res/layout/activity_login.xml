<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center_vertical|center_horizontal"
    android:paddingBottom="16dp"
    android:paddingLeft="64dp"

    android:paddingRight="64dp"
    android:paddingTop="16dp"
    tools:context="eletrofisio.com.teste11.activity.LoginActivity">


        <EditText
            android:id="@+id/edit_login_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edit_login_senha"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/fundo_caixa_texto"
            android:hint="Digite seu usuÃ¡rio"
            android:padding="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="#013105"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edit_login_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_logar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="9dp"
            android:background="@drawable/fundo_caixa_texto"
            android:ems="10"
            android:hint="Digite sua senha"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="?attr/colorPrimaryDark"
            android:textColorHint="#013105"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button_logar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/fundo_botao"
            android:text="@string/botao_logar"
            android:textColor="#013105"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="83dp"
            android:onClick="abrirCadastroUsuario"
            android:text="@string/crie_conta"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#013105"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            ads:srcCompat="@drawable/web_hi_res_512" />


</RelativeLayout>